@model IEnumerable<LabDeskApplication.Models.SetupColour>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add Colour", "Create", null, new { @class = "btn btn-primary" }) |
